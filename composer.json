{
    "name": "bermudaphp/stringy",
    "description": "A comprehensive PHP string manipulation library with full Unicode support",
    "license": "MIT",
    "keywords": ["string", "unicode", "manipulation", "multibyte", "utf8", "immutable"],
    "autoload": {
        "psr-4": {
            "Bermuda\\Stdlib\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bermuda\\Stdlib\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse src --level=7",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable"
}
