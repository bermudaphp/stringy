{
    "name": "bermudaphp/stringy",
    "description": "A comprehensive PHP string manipulation library with full Unicode support",
    "license": "MIT",
    "keywords": ["string", "unicode", "manipulation", "multibyte", "utf8", "immutable"],
    "autoload": {
        "psr-4": {
            "Bermuda\\Stdlib\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bermuda\\Stdlib\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5"
    },
    "scripts": {
        "test": "phpunit"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable"
}
